@model YourApp.Models.FormModel

@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .login-container {
        background: rgba(0, 0, 0, 0.8);
        backdrop-filter: blur(10px);
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        border: 1px solid rgba(255, 215, 0, 0.2);
        width: 100%;
        max-width: 600px;
        margin: 2rem auto;
    }

    h2 {
        color: #ffd700;
        text-align: center;
        margin-bottom: 30px;
        font-size: 28px;
        font-weight: 600;
    }

    .form-header {
        background: rgba(255, 215, 0, 0.1);
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 25px;
        border: 1px solid rgba(255, 215, 0, 0.2);
    }

    .form-header p {
        color: #ffd700;
        margin: 0;
        font-size: 18px;
        font-weight: 500;
        text-align: center;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-row {
        display: flex;
        gap: 20px;
        margin-bottom: 25px;
    }

    .form-col {
        flex: 1;
    }

    label {
        display: block;
        color: #ffd700;
        margin-bottom: 8px;
        font-size: 14px;
        font-weight: 500;
    }

    input[type="text"],
    input[type="password"],
    input[type="number"],
    input[type="date"] {
        width: 100%;
        padding: 12px 15px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 215, 0, 0.3);
        border-radius: 8px;
        color: white;
        font-size: 14px;
        transition: all 0.3s ease;
    }

    input[type="text"]:focus,
    input[type="password"]:focus,
    input[type="number"]:focus,
    input[type="date"]:focus {
        outline: none;
        border-color: #ffd700;
        box-shadow: 0 0 10px rgba(255, 215, 0, 0.2);
    }

    input[type="text"]::placeholder,
    input[type="password"]::placeholder,
    input[type="number"]::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }

    input[readonly] {
        background: rgba(255, 255, 255, 0.02);
        border-color: rgba(255, 215, 0, 0.1);
        cursor: not-allowed;
    }

    button[type="submit"] {
        width: 100%;
        padding: 14px;
        background: #ffd700;
        color: #1a1a1a;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 20px;
    }

    button[type="submit"]:hover {
        background: #ffed4a;
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(255, 215, 0, 0.3);
    }

    .error-message {
        background: rgba(255, 0, 0, 0.1);
        border: 1px solid rgba(255, 0, 0, 0.3);
        color: #ff6b6b;
        padding: 12px;
        border-radius: 8px;
        margin-top: 20px;
        text-align: center;
        font-size: 14px;
    }
</style>

<div class="login-container">
    <h2>Personal Info</h2>

    <form method="post">
        <div class="form-header">
            <p>Student Information</p>
        </div>

        <div class="form-row">
            <div class="form-col">
                <div class="form-group">
                    <label for="Id">ID:</label>
                    <input type="text" id="Id" name="Id" value="@Model.Id" required />
                </div>
            </div>
            <div class="form-col">
                <div class="form-group">
                    <label for="Name">Name:</label>
                    <input type="text" id="Name" name="Name" value="@Model.Name" required />
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="form-col">
                <div class="form-group">
                    <label for="Username">Username:</label>
                    <input type="text" id="Username" name="Username" value="@Model.Username" readonly />
                </div>
            </div>
            <div class="form-col">
                <div class="form-group">
                    <label for="Course">Course:</label>
                    <input type="text" id="Course" name="Course" value="@Model.Course" required />
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="form-col">
                <div class="form-group">
                    <label for="Semester">Semester:</label>
                    <input type="number" id="Semester" name="Semester" value="@Model.Semester" required />
                </div>
            </div>
            <div class="form-col">
                <div class="form-group">
                    <label for="CGPA">CGPA:</label>
                    <input type="number" step="0.01" id="CGPA" name="CGPA" value="@Model.CGPA" required />
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="form-col">
                <div class="form-group">
                    <label for="DOB">Date of Birth:</label>
                    <input type="date" id="DOB" name="DOB" 
                           value="@Model.DOB.ToString("yyyy-MM-dd")" 
                           min="1970-01-01" 
                           max="@DateTime.Now.ToString("yyyy-MM-dd")"
                           required />
                </div>
            </div>
            <div class="form-col">
                <div class="form-group">
                    <label for="Hometown">Hometown:</label>
                    <input type="text" id="Hometown" name="Hometown" value="@Model.Hometown" required />
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="form-col">
                <div class="form-group">
                    <label for="Password">Password:</label>
                    <input type="password" id="Password" name="Password" value="@Model.Password" readonly />
                </div>
            </div>
            <div class="form-col">
                <div class="form-group">
                    <label for="DepartmentId">Department ID:</label>
                    <input type="text" id="DepartmentId" name="DepartmentId" value="@Model.DepartmentId" required />
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="DepartmentName">Department Name:</label>
            <input type="text" id="DepartmentName" name="DepartmentName" value="@Model.DepartmentName" required />
        </div>

        <button type="submit">Save Changes</button>
    </form>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="error-message">@ViewBag.ErrorMessage</div>
    }
</div>