@model YourApp.Models.SignModel

@{
    ViewBag.Title = "Sign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .login-container {
        background: rgba(0, 0, 0, 0.8);
        backdrop-filter: blur(10px);
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        border: 1px solid rgba(255, 215, 0, 0.2);
        width: 100%;
        max-width: 400px;
        margin: 0 auto;
    }

    h2 {
        color: #ffd700;
        text-align: center;
        margin-bottom: 30px;
        font-size: 28px;
        font-weight: 600;
    }

    .form-group {
        margin-bottom: 25px;
    }

    label {
        display: block;
        color: #ffd700;
        margin-bottom: 8px;
        font-size: 14px;
        font-weight: 500;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 12px 15px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 215, 0, 0.3);
        border-radius: 8px;
        color: white;
        font-size: 14px;
        transition: all 0.3s ease;
    }

    input[type="text"]:focus,
    input[type="password"]:focus {
        outline: none;
        border-color: #ffd700;
        box-shadow: 0 0 10px rgba(255, 215, 0, 0.2);
    }

    input[type="text"]::placeholder,
    input[type="password"]::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }

    button[type="submit"] {
        width: 100%;
        padding: 12px;
        background: #ffd700;
        color: #1a1a1a;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    button[type="submit"]:hover {
        background: #ffed4a;
        transform: translateY(-2px);
    }

    .signup-link {
        text-align: center;
        margin-top: 25px;
    }

    .signup-link a {
        color: #ffd700;
        text-decoration: none;
        font-size: 14px;
        transition: all 0.3s ease;
    }

    .signup-link a:hover {
        color: #ffed4a;
        text-decoration: underline;
    }

    .error-message {
        background: rgba(255, 0, 0, 0.1);
        border: 1px solid rgba(255, 0, 0, 0.3);
        color: #ff6b6b;
        padding: 10px;
        border-radius: 8px;
        margin-top: 20px;
        text-align: center;
        font-size: 14px;
    }
</style>

<div class="login-container">
    <h2>Create Account</h2>

    <form method="post">
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" id="username" name="Username" value="@Model.Username" required placeholder="Enter your username" />
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="Password" value="@Model.Password" required placeholder="Enter your password" />
        </div>

        <button type="submit">Sign Up</button>

        <div class="signup-link">
            Already have an account? <a asp-controller="Account" asp-action="Login">Login</a>
        </div>
    </form>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="error-message">@ViewBag.ErrorMessage</div>
    }
</div>
