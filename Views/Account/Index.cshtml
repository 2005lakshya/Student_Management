@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

@{
    var username = Context.Session.GetString("StudentUsername");
    var isAdmin = username?.ToLower() == "admin";
}

@if (isAdmin)
{
    <div class="container-fluid admin-dashboard">
        <h2 class="mb-4">Student Management Dashboard</h2>
        
        <div class="table-responsive">
            <table class="custom-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Username</th>
                        <th>Course</th>
                        <th>Semester</th>
                        <th>CGPA</th>
                        <th>Date of Birth</th>
                        <th>Hometown</th>
                        <th>Department ID</th>
                        <th>Department Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.Id</td>
                            <td>@student.Name</td>
                            <td>@student.Username</td>
                            <td>@student.Course</td>
                            <td>@student.Semester</td>
                            <td>@student.CGPA</td>
                            <td>@student.DOB.ToShortDateString()</td>
                            <td>@student.Hometown</td>
                            <td>@student.DepartmentId</td>
                            <td>@student.DepartmentName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <style>
        .admin-dashboard {
            background-color: black;
            padding: 20px;
            border-radius: 10px;
            margin-top: 20px;
        }

        .admin-dashboard h2 {
            color: white;
        }

        .table-responsive {
            margin-top: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
            border-radius: 8px;
            overflow: hidden;
        }

        .custom-table {
            width: 100%;
            margin-bottom: 0;
            color: white;
            background-color: black;
        }

        .custom-table thead th {
            background-color: rgb(33, 31, 33);
            color: #ffd700;
            font-weight: 500;
            text-transform: uppercase;
            font-size: 0.85rem;
            padding: 12px;
            text-align: left;
            border: 1px solid #ffd700;
        }

        .custom-table tbody td {
            padding: 12px;
            border: 1px solid rgba(255, 215, 0, 0.2);
            color: white;
            font-size: 0.9rem;
        }
    </style>
}
else
{
    <div>
        <h2>All Students Info</h2>
        @foreach (var student in Model)
        {
            <table class="custom-table mb-5">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Information</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>Student ID:</th>
                        <td>@student.Id</td>
                    </tr>
                    <tr>
                        <th>Name:</th>
                        <td>@student.Name</td>
                    </tr>
                    <tr>
                        <th>Username:</th>
                        <td>@student.Username</td>
                    </tr>
                    <tr>
                        <th>Course:</th>
                        <td>@student.Course</td>
                    </tr>
                    <tr>
                        <th>Semester:</th>
                        <td>@student.Semester</td>
                    </tr>
                    <tr>
                        <th>CGPA:</th>
                        <td>@student.CGPA</td>
                    </tr>
                    <tr>
                        <th>Date of Birth:</th>
                        <td>@student.DOB.ToShortDateString()</td>
                    </tr>
                    <tr>
                        <th>Hometown:</th>
                        <td>@student.Hometown</td>
                    </tr>
                    <tr>
                        <th>Department ID:</th>
                        <td>@student.DepartmentId</td>
                    </tr>
                    <tr>
                        <th>Department Name:</th>
                        <td>@student.DepartmentName</td>
                    </tr>
                </tbody>
            </table>
        }
    </div>

    <style>
        .custom-table {
            width: 100%;
            border-collapse: collapse;
            color: white;
            background: rgba(0, 0, 0, 0.3);
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
        }

        .custom-table thead th {
            background-color: rgb(33, 31, 33);
            color: #ffd700;
            padding: 12px;
            text-align: left;
            border: 1px solid #ffd700;
        }

        .custom-table tbody th {
            color: #ffd700;
            padding: 12px;
            text-align: left;
            border: 1px solid rgba(255, 215, 0, 0.2);
        }

        .custom-table tbody td {
            padding: 12px;
            border: 1px solid rgba(255, 215, 0, 0.2);
        }
    </style>
}
